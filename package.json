{
  "name": "codescribe",
  "displayName": "CodeScribe",
  "description": "An AI assistant for developers",
  "version": "0.0.12",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codescribe-sidebar",
          "title": "CodeScribe AI",
          "icon": "assets/codescribe-logo.svg"
        }
      ]
    },
    "views": {
      "codescribe-sidebar": [
        {
          "id": "codescribe.stagedChangesView",
          "name": "Staged Changes",
          "type": "tree"
        },
        {
          "id": "codescribe.aiOutputsView",
          "name": "AI Generations",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "codescribe.generateCommitMessage",
        "title": "Generate AI Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "codescribe.generatePRDescription",
        "title": "Generate AI PR Description",
        "icon": "$(note)"
      },
      {
        "command": "codescribe.copyToClipboard",
        "title": "Copy"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codescribe.generateCommitMessage",
          "when": "view == codescribe.aiOutputsView",
          "group": "navigation"
        },
        {
          "command": "codescribe.generatePRDescription",
          "when": "view == codescribe.aiOutputsView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
